<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_lock_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_23262d"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="20dp">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/list_icon_lock" />

    <TextView
        android:id="@+id/txt_lock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="EhomeXXX"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <com.tc.bluetoothlock.view.BatteryView
        android:id="@+id/battery"
        android:layout_width="50dp"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/txt_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="100%"
        android:textColor="@color/white" />

</LinearLayout>