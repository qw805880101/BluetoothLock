<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_151519"
    android:orientation="vertical">

    <com.tc.bluetoothlock.view.WaveView
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_hint"
        android:gravity="center"
        android:background="@mipmap/icon_open_lock"
        android:layout_width="@dimen/dp_124"
        android:layout_height="@dimen/dp_124"
        android:layout_centerInParent="true"
        android:textSize="@dimen/sp_18"
        android:textColor="@android:color/white"
        android:text="@string/openning"/>

</RelativeLayout>
