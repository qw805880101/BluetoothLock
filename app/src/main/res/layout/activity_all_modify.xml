<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_151519"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/bg_23262d"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/txt_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textColor="@color/txt_0577fe"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="@color/white"
            android:textColorHint="@color/txt_646464" />

        <ImageView
            android:id="@+id/image_del"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_60"
            android:scaleType="center"
            android:src="@mipmap/chage_icon_delete" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_mod_02"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/bg_23262d"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_hint_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textColor="@color/txt_0577fe"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_text_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="@dimen/dp_20"
            android:text="123123"
            android:textColor="@color/white"
            android:textColorHint="@color/txt_646464" />

        <ImageView
            android:id="@+id/image_del_02"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_60"
            android:scaleType="center"
            android:src="@mipmap/chage_icon_delete" />


    </LinearLayout>


</LinearLayout>